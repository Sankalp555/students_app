<div align="center">
  <%= form_for @student, url: student_path, method: :put do |f| %>
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 	<p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :marks %><br>
    <%= f.number_field :marks %>
  </p>
  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>